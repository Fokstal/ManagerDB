<Window
    x:Class="ManagerDB.View.MessageViewWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:VM="clr-namespace:ManagerDB.ViewModel"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:ManagerDB.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="MessageViewWind"
    Title="MessageViewWindow"
    Width="200"
    Height="100"
    WindowStyle="None"
    mc:Ignorable="d">

    <Window.DataContext>
        <VM:MessageViewVM />
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="25" />
        </Grid.RowDefinitions>

        <TextBlock
            Grid.Row="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            FontSize="14"
            Text="{Binding Message}"
            TextAlignment="Center"
            TextWrapping="Wrap" />

        <Button
            Grid.Row="1"
            Command="{Binding CloseMessageViewCommand}"
            CommandParameter="{Binding ElementName=MessageViewWind}"
            Content="OK" />

    </Grid>
</Window>
